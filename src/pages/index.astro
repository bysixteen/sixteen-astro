---
const STRAPI_URL = import.meta.env.PUBLIC_STRAPI_URL || 'https://supportive-baseball-03e494ce0b.strapiapp.com/api';

let works = [];
try {
  const worksRes = await fetch(`${STRAPI_URL}/works?populate=*`);
  if (worksRes.ok) {
    const response = await worksRes.json();
    works = response.data || [];
  } else {
    console.error('Failed to fetch works:', worksRes.status);
  }
} catch (error) {
  console.error('Error fetching works:', error);
}

import Layout from '../layouts/Layout.astro';
import '../styles/main.css';
---
<Layout>
  <div class="grid grid-cols-12 gap-6 px-grid">
    <div class="px-6 w-full mx-auto">
      <canvas id="project-slider" class="fixed top-0 left-0 w-screen h-screen z-10 pointer-events-auto"></canvas>
      <main id="content-holder" role="main" tabindex="-1">
        <div id="project-data" style="display:none;">
          {works?.length
            ? works.map((item: any) => {
                const a = item.attributes ?? item;
                const client = a.Client;
                const slug   = a.Slug;
                
                let imgUrl = "https://via.placeholder.com/400x300/333333/ffffff?text=No+Image";
                
                if (a.ThumbImage?.data?.attributes) {
                  const thumb = a.ThumbImage.data.attributes;
                  const thumbPath = thumb.formats?.medium?.url
                                  || thumb.formats?.small?.url
                                  || thumb.formats?.thumbnail?.url
                                  || thumb.url;
                  
                  if (thumbPath) {
                    // Use full URL if it's already a complete URL, otherwise prepend Strapi base
                    imgUrl = thumbPath.startsWith('http') ? thumbPath : `${STRAPI_URL.replace('/api', '')}${thumbPath}`;
                  }
                }
          
                return (
                  <div 
                    class="project-item"
                    data-title={client}
                    data-category={a.Type ?? '—'}
                    data-image={imgUrl}
                    data-url={`/works/${slug}`}
                    style="display: none;"
                  >
                    {client} - {a.Type ?? '—'}
                  </div>
                );
              })
            : <div>No works found from Strapi.</div>}
          
        </div>
        
        {/* Debug info - remove this later */}
        <div style="position: fixed; top: 10px; left: 10px; background: rgba(0,0,0,0.8); color: white; padding: 10px; z-index: 1000; font-family: monospace; font-size: 12px;">
          <div>Works loaded: {works?.length || 0}</div>
          <div>Canvas: <span id="canvas-status">Checking...</span></div>
          <div>Gallery: <span id="gallery-status">Not started</span></div>
        </div>
      </main>
    </div>
  </div>
  <script type="module" src="/scripts/gallery.js"></script>
</Layout>
